{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch SimpleProject",
      "type": "coreclr",
      "request": "launch",

      // Path to dll output
      "program": "${workspaceFolder}/Server/bin/Debug/net9.0/Server.dll",

      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,

      // Optional: environment variables
      "env": {
        "DOTNET_ENVIRONMENT": "Development"
      },

      "console": "integratedTerminal"
    }
  ]
}
